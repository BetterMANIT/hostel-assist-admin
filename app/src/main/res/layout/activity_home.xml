<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FBEEEE"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/backspan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:elevation="10dp"
        android:translationY="-20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/backbtn"
                android:layout_gravity="center|left"
                android:layout_margin="20dp"
                android:translationX="20dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:src="@drawable/manit_logo" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="HOSTEL ASSIST"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />
        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entry Status : OFF"
        android:gravity="center"
        android:textColor="@color/color3"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textColor="#AB2A295E"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect To MANIT Wifi"
            android:textColor="@color/color1"
            android:textSize="26sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#AB2A295E"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 - 09 - 2024"
            android:textColor="@color/color1"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Entry/Exit"
            android:textColor="#AB2A295E"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/entries_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textColor="@color/color1"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_entries"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:backgroundTint="#0A8C19"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="Start Entry / Exit"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/key_24dp_5f6368_fill0_wght400_grad0_opsz24"
        app:iconGravity="textStart"
        app:iconTint="@color/white" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_entries"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:backgroundTint="#C30859"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="View Entries"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/person_check_24dp_5f6368_fill1_wght400_grad0_opsz24"
        app:iconGravity="textStart"
        app:iconTint="@color/white" />

</LinearLayout>